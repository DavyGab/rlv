{% extends 'admin.video.layout.html.twig' %}
{% block body %}
<div class="col-md-12">
    <div class="card">
        <div style="overflow:scroll">

            <div class="card-header">
                <h4 class="card-title">
                    Video List
                </h4>
            </div>

            <div class="card-body">
                <table id="video-list" class="table table-striped table-bordered" style="width:100%;">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Slug</th>
                        <th>Title</th>
                        <th>Video_url</th>
                        <th>Description</th>
                        <th>Website</th>
                        <th>Createdat</th>
                        <th>Updatedat</th>
                        <th>Publishedat</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for video in videos %}
                    <tr>
                        <td><a href="{{ path('video_show', { 'id': video.id }) }}">{{ video.id }}</a></td>
                        <td>{{ video.slug }}</td>
                        <td>{{ video.title }}</td>
                        <td>{{ video.videourl }}</td>
                        <td>{{ video.description }}</td>
                        <td>{{ video.website }}</td>
                        <td>{% if video.createdAt %}{{ video.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{% if video.updatedAt %}{{ video.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{% if video.publishedAt %}{{ video.publishedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td style="display:table-cell">
				<a href="{{ path('video_edit', { 'id': video.id }) }}"><img src="/admin-assets/img/icon-edit-video.png"/> </a>
                </td>

                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <ul>
                <li>
                    <a href="{{ path('video_new') }}">Create a new video</a>
                </li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}
{% block javascriptSubMenu %}
<script type='text/javascript'>
    var activePage = "page-video-list";
</script>
{% endblock %}


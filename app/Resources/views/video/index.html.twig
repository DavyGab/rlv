{% extends 'admin.video.layout.html.twig' %}
{% block body %}
    <div style="overflow:scroll">
    <h1>Videos list</h1>

    <table id="video-list" class="table table-striped table-bordered" style="width:100%;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Slug</th>
                <th>Title</th>
                <th>Video_url</th>
                <th>Description</th>
                <th>Website</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Publishedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for video in videos %}
            <tr>
                <td><a href="{{ path('video_show', { 'id': video.id }) }}">{{ video.id }}</a></td>
                <td>{{ video.slug }}</td>
                <td>{{ video.title }}</td>
                <td>{{ video.videourl }}</td>
                <td>{{ video.description }}</td>
                <td>{{ video.website }}</td>
                <td>{% if video.createdAt %}{{ video.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if video.updatedAt %}{{ video.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if video.publishedAt %}{{ video.publishedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('video_show', { 'id': video.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('video_edit', { 'id': video.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('video_new') }}">Create a new video</a>
        </li>
    </ul>
    </div>
{% endblock %}
{% block javascriptSubMenu %}
    <script type='text/javascript'>
        var activePage="page-video-list";
    </script>
{% endblock %}

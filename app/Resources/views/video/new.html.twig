{% extends 'admin.video.layout.html.twig' %}
{% block content %}
    <div class="col-md-12">
        <div class="card">

            <div class="card-header">
                <h4 class="card-title">
                    {% if action == 'create' %}
                        Upload Video
                    {% else %}
                        Edit Video
                    {% endif %}
                </h4>
            </div>

            <div class="card-body">
                <form method="post" action="{{ path('video_new') }}" name="video-upload" enctype="multipart/form-data" id="video-upload-form">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.title, 'Title', { 'attr': {'class': 'form-control'} }) }}
                                {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.slug, 'Slug', { 'attr': {'class': 'form-control'} }) }}
                                {{ form_widget(form.slug, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-5 pr-1">
                            <div class="form-group">
                                {{ form_label(form.speaker, 'Speaker', { 'attr': {'class': 'form-control'} }) }}
                                {{ form_widget(form.speaker, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>

                        <div class="col-md-4 pl-1">
                            <div class="form-group">
                                {{ form_label(form.website, 'Website', { 'attr': {'class': 'form-control'} }) }}
                                {{ form_widget(form.website, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>

                        <div class="col-md-3 px-1">
                            <div class="form-group">
                                {{ form_label(form.duration, 'Duration', { 'attr': {'class': 'form-control'} }) }}
                                {{ form_widget(form.duration, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                {{ form_label(form.video_url, 'Url', { 'attr': {'class': 'form-control'} }) }}
                                {{ form_widget(form.video_url, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                {{ form_label(form.description, 'Description', { 'attr': {'class': 'form-control'} }) }}
                                {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.categories, 'Categories', { 'attr': {'class': 'form-control'} }) }}
                                {{ form_widget(form.categories, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="vidoeFile" >Select File</label>
                                <input type="file" id="vidoeFile" name="video_file" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="row">                        
                        <div class="col-md-12">
                            <div id="loader-icon">                            
                                <div id="progress-bar" class="blue stripes">
                                    <span class="progress-color progress-percent" style="width:10%; min-width:10%">10%</span>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-md-12">
                            <input type="submit" class="btn btn-info btn-fill pull-right"
                                   value="{% if action == 'create' %}Create{% else %}Update{% endif %}"/>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascriptSubMenu %}
    <script type='text/javascript'>
        var activePage = "page-upload-video";


        window.onload = function (we) {
            $("#video-upload-form").on('submit',(function(e) {
                $(".progress-color").width('0%');
                $(".progress-percent").html('0%');
                $('#loader-icon').fadeIn(10);
                e.preventDefault();
                $.ajax({
                    url: $(this).attr("action"),
                    type: $(this).attr("method"),
                    data: new FormData(this),
                    processData: false,
                    contentType: false,
                    cache: false,
                    xhr: function() {
                          var xhr = new window.XMLHttpRequest();
                          xhr.upload.addEventListener("progress",
                                                      uploadProgressHandler,
                                                      false
                                                     );
                          xhr.addEventListener("load", loadHandler, false);
                          xhr.addEventListener("error", errorHandler, false);
                          xhr.addEventListener("abort", abortHandler, false);

                          return xhr;					
                    },
                    success: function () {
                        $('#loader-icon').fadeOut(2000);
                    },
                    resetForm: true
                });
                return false;
            }));
        }


        function uploadProgressHandler(event)
        {
            var percent = (event.loaded / event.total) * 100;
            var percentComplete = Math.round(percent);            
            $(".progress-color").width(percentComplete + '%');
            $(".progress-percent").html(percentComplete + ' %');
        }

        function loadHandler(event)
        {
            console.log('loadHandler');
        }

        function errorHandler(event){
            console.log('errorHandler');
        }

        function abortHandler(event){
            console.log('abortHandler');
        }
    </script>
{% endblock %}

{% extends 'admin.user.layout.html.twig' %}
{% block body %}
<div class="col-md-12">
    <div class="card">
        <div style="overflow:scroll">

            <div class="card-header">
                <h4 class="card-title">
                    User List
                </h4>
            </div>

            <div class="card-body">
                <table id="video-list" class="table table-striped table-bordered" style="width:100%;">
                    <thead>
                    <tr>
                        <th>Fist Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Birth Date</th>
                        <th>Roles</th>
                        <th>Edit</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                    <tr>
                        <td>{{ user.getFirstName() }}</td>
                        <td>{{ user.getLastName()}}</td>                      
                        <td>{{ user.getEmail()}}</td>
                        <td>{{ user.getBirthdate()|date('Y-m-d')}}</td>
                        <td>{{ user.getUserRoles() }}</td>
                        <td>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}"><img src="/admin-assets/img/215-User-512.png" height="32px;" /> </a>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
                    
        </div>
    </div>
</div>
{% endblock %}
{% block javascriptSubMenu %}
<script type='text/javascript'>
    var activePage = "page-video-list";
</script>
{% endblock %}